- content_for :heading do
  = "Hi #{@user.name}!"

:css
  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }
  td {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
    padding: 0;
    margin: 0;
    width: 10px;
    height: 10px;
  }
  td.black { background-color: #000; }
  td.white { background-color: #fff; }

%table
  - @qr.modules.each_index do |x|
    %tr
      - @qr.modules.each_index do |y|
        - if @qr.dark?(x,y)
          %td.black/
        - else
          %td.white/
#digital-scale
  #measurement
    %ul
      %li#whole
      %li#point ya
      %li#fraction

%button#track-weight{"data-role"=>"button","data-theme"=>"a","data-facebook-id"=>"#{@user.email}"}
  Track Weight
